# Application settings
SESSION_SECRET=your-secret-key-here
DEMO_MODE=True
FLASK_DEBUG=0

# Database settings
# SQLite (default for local development)
# DATABASE_URL=sqlite:///instance/journal.db

# PostgreSQL (uncomment and configure for production or with Docker)
DATABASE_URL=postgresql://journal_user:journal_password@db:5432/journal
DB_USER=journal_user
DB_PASSWORD=journal_password
DB_NAME=journal
# DB_HOST is 'db' when using docker-compose, 'localhost' for local PostgreSQL
DB_HOST=db

# Test account passwords (for demo mode)
ADMIN_PASSWORD=adminpassword
EDITOR_PASSWORD=editorpassword
REVIEWER_PASSWORD=reviewerpassword
AUTHOR_PASSWORD=authorpassword

# Upload settings
MAX_CONTENT_LENGTH=16777216 # 16MB